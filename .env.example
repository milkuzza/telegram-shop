# Database Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_mongo_password
MONGO_DATABASE=mezohit

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_WEBHOOK_URL=https://yourdomain.com/api/telegram/webhook
REACT_APP_TELEGRAM_BOT_USERNAME=your_bot_username

# API Configuration
REACT_APP_API_URL=https://yourdomain.com/api

# Admin Configuration
ADMIN_EMAIL=admin@mezohit.com
ADMIN_PASSWORD=your_secure_admin_password

# Payment Configuration (Telegram Payments)
TELEGRAM_PAYMENT_PROVIDER_TOKEN=your_payment_provider_token

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/private.key

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
